
<div class="card-item col">
  <div class="card hoverable">
    <div class="row g-0">
      {%- if project.img -%}
      <div class="col-md-4" style="padding-right: 0">
          {% include figure.liquid path=project.img alt="project thumbnail"%}
      </div>
      {%- endif -%}
      <div class="col-md-8" style="padding-left: 0">
        <div class="card-body">
          <h3 class="card-title">{{ project.title }}</h3>
          {%- if project.subtitle -%}
          <h3 class="card-text font-italic">{{ project.subtitle }}</h3>
          {%- endif -%}
          <p class="card-text">{{ project.description }}</p>
          <div class="row ml-1 mr-1 p-0">
            {%- if project.github -%}
            <div class="card-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon fa-lg"></i></a>
              </div>
              {%- if project.github_stars -%}
              <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                <i class="fas fa-star"></i>
                <span id="{{ project.github_stars }}-stars"></span>
              </span>
              {%- endif -%}
            </div>
            {%- endif -%}
            {%- if project.report -%}
            <div class="card-icon">
              <div class="icon" data-toggle="tooltip" title="Report">
                <a href="{{ project.report }}"><i class="fas fa-file-pdf fa-lg"> </i></a>
              </div>
            </div>
            {%- endif -%}
            {%- if project.slides -%}
            <div class="card-icon">
              <div class="icon" data-toggle="tooltip" title="Slides or Poster">
                <a href="{{ project.slides }}"><i class="fas fa-file-powerpoint fa-lg"> </i></a>
              </div>
            </div>
            {%- endif -%}
          </div>
        </div>
      </div>
  </div>
</div>
  </div>